<project name="zerotick-ib" default="dist" basedir=".">
    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="dist"  location="dist"/>

    <target name="init">
        <tstamp/>
        <mkdir dir="${build}"/>
    </target>

    <target name="javadoc">
        <javadoc sourcepath="${src}" destdir="${dist}/doc" packagenames="org.zerotick.*"/>
    </target>

    <target name="compile" depends="init" description="compile the source " >
        <javac srcdir="${src}" destdir="${build}" classpath="../IBJts/jtsclient.jar:zmq.jar:msgpack.jar"/>
    </target>

    <target name="dist" depends="compile" description="generate the distribution" >
        <mkdir dir="${dist}/lib"/>
        <jar jarfile="${dist}/lib/zerotick-ib-${DSTAMP}.jar" basedir="${build}"/>
        <symlink link="${dist}/lib/zerotick-ib.jar"
            resource="${dist}/lib/zerotick-ib-${DSTAMP}.jar" overwrite="true"/>
    </target>

    <target name="clean" description="clean up" >
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>
</project>
